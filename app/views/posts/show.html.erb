<p style="color: green"><%= notice %></p>
<div class="container">
<%= render @post %>
<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>
  <%= button_to "Delete post", @post, method: :delete %>
</div>
</div>
  <div class="container">
  <%= render "comentarios/form", post: @post,
   comentario: @post.comentarios.build,
          submit_label: "Reply"  %>
  <% @comentarios.each do |comentario| %>
  <%= render "comentarios/comentario", post: @post, comentario: comentario %>
  <% end %>
  </div>
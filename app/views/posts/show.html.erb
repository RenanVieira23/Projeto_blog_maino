<div class="container">
  <%= render @post %>
  <div class="d-flex justify-content-between align-items-center mt-3">
    <%= link_to t("Back to posts"), posts_path, class: "btn btn-outline-secondary" %>
    <div class="d-flex">
      <%= link_to t("Edit"), edit_post_path(@post), class: "btn btn-primary me-2" %>
      <%= button_to t("Delete"), @post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
<div class="container">
  <%= render "comentarios/form", post: @post, comentario: @post.comentarios.build, submit_label: "Reply" %>
  <% @comentarios.each do |comentario| %>
    <%= render "comentarios/comentario", post: @post, comentario: comentario %>
  <% end %>
  
</div>